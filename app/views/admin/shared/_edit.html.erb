<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @article %>
  <% if current_user.profile_id == 1 && @article.persisted? %>
    <div class='merge'>
      <h4><%= _("Merge Articles") %></h4>
      <%= form_tag "/admin/content/merge/#{@article.id}" do -%>
        <%= label :merge, :id, "Article id" %>
        <%= text_field :merge, :id, :name => 'merge_with' %>
        <%= submit_tag "Merge" %>
      <% end -%>
    </div>
  <% end %>
<% end %>
